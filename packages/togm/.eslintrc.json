{
  "plugins": ["@typescript-eslint", "prettier"],
  "ignorePatterns": "*.js",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "project": ["tsconfig.json"]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "@typescript-eslint/no-floating-promises": "error",
    "prettier/prettier": ["error", {
      "printWidth": 100
    }]
  }
}
